<div class="slide-out-bg active"></div>

<div class="modal show d-block">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        {{#link-to "author" class="btn btn-secondary"}}
          Back
        {{/link-to}}

        <h5 class="modal-title">Author Details №{{model.id}}</h5>
      </div>
      <div class="modal-body">
        <p>ID: {{model.id}}</p>
        <p>Date Created: {{model.id}}</p>
        <!-- Добавьте другие поля, которые хотите отображать -->
      </div>
      <div class="modal-footer">
        {{#link-to "author.edit" model.id class="btn btn-primary"}}
        Edit
        {{/link-to}}
        <button class="btn btn-danger" onclick={{action "deleteAuthor" model}}>Delete</button>
      </div>
    </div>
  </div>
</div>

